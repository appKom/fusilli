---
import Layout from '../layouts/Layout.astro';
import type Description from '../interfaces/description';
import type Title from '../interfaces/title';
import fetchApi from '../lib/strapi';

const home_page_description = await fetchApi<Description>({
    endpoint: 'descriptions/ztjsf58sockcqwhytjk0d8yc',
    wrappedByKey: 'data',
})

const home_page_titles = await fetchApi<Title[]>({
    endpoint: 'titles?filters[slug][$in][0]=for-studenter&filters[slug][$in][1]=av-studenter',
    wrappedByKey: 'data',
})
---

<Layout title="Realfagskjelleren" navbarTextColor="#FFFFFF">
    <img src="public/flekkV.svg" alt="flekk venstre" class="float-left">
    <main>
        <img src="flekkOH.svg" alt="" class="float-right">
        <div class="information">
            <h1 class="pt-44 text-center text-white text-4xl leading-tight">
                <span class="block text-7xl">{home_page_titles[0].Title}</span>
                <span class="pt-4 text-7xl block -mt-1">{home_page_titles[1].Title}</span>
            </h1>
            <p class="text-2xl  text-white text-center leading-9">
                <span class="block">Stedet for alle nerdene på realfagsbygget!</span>
                <span class="block">{home_page_description.Description}</span>
            </p>
            
            <div class="flex justify-center mt-6">
                <a href="/events" class="pt-3 pb-3 pl-10 pr-10 bg-white hover:bg-orange-600 text-orange-500 font-bold py-2 px-4 rounded-full transition duration-300">
                    SE HVA SOM SKJER
                </a>
            </div>
        </div>
            
    
        <img src="flekkNH.svg" alt="" class ="float-right mt-32">
        </main>
    </Layout>

<style>
    main {
		background-color: #FE710F;
		background-attachment: scroll;  /* Endret fra fixed til scroll */

		color: black;
		font-size: 20px;
		line-height: 1.6;
		min-height: 200vh; /* Sjekk om dette hjelper */
    }
    /* .astro-a {
        position: absolute;
        top: -32px;
        left: 50%;
        transform: translatex(-50%);
        width: 220px;
        height: auto;
        z-index: -1;
    } */
    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 0.5em;
    }

    .information {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    max-width: 700px; /* juster etter smak */
    padding: 0 1rem;  /* litt luft på små skjermer */
    }

</style>
