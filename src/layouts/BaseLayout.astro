---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	  
		<!-- Akshar font -->
		<link href="https://fonts.googleapis.com/css2?family=Akshar&display=swap" rel="stylesheet">
	</head>
	  
	<body class="relative bg-[#FE710F] min-h-screen">
		<img
			src="/flekkVenstre.png"
			alt="Flekk Venstre"
			class="absolute top-0 left-0 z-0 w-60  pointer-events-none"/>
		<img
			src="/flekkHoyre.png"
			alt="Flekk Hoyre"
			class="absolute top-0 right-0 z-0 w-60  pointer-events-none"/>
		<img
			src="/FlekkNedeHoyre.png"
			alt="Flekk Nede Hoyre"
			class="absolute bottom-10 right-0 z-0 w-80  pointer-events-none"/>


		<slot />

	</body>
	  
</html>
<style is:global>
	:root {
		--accent-gradient: linear-gradient(45deg, #FFFFFF 30%, black 50%, blue 70%);
	}
	html {
		font-family: 'Akshar', sans-serif;
		background-color: #FFFFFF;
	}
</style>

